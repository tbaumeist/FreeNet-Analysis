#!/bin/bash
# This script uses a program called "expect" to install
# this program run "sudo apt-get install expect"

HOST=$1
USER=$2
PASS=$3
FROM=$4
TO=$5

#echo $CMD
VAR=$(expect -c "
spawn scp -p $USER@$HOST:$FROM $TO
match_max 100000
expect \"*?assword:*\"
send -- \"$PASS\r\"
send -- \"\r\"
expect eof
")
echo "==============="
echo "$VAR"
